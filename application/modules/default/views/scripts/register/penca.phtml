<script type="text/javascript">
    
    function seguinte() {
        $("#btnSeguinte").bind('click', function() {
            var step = $(this).attr("step");
            if (step != 3) {
                $("#paso"+step).removeClass("active");
                $("#badge"+step).removeClass("badge-info");
                $("#badge"+step).addClass("badge-success");
                $("#paso"+step).addClass("complete");
                $("#step"+step).removeClass("active");


                var stepAtual = parseInt(step) + 1;
                $("#btnSeguinte").attr("step", stepAtual);
                $("#badge"+stepAtual).addClass("badge-info")
                $("#paso"+stepAtual).addClass("active");
                $("#step"+stepAtual).addClass("active");

                $("#btnPrev").attr("step", stepAtual);
                
                if (stepAtual == 3) {
                    $("#btnSeguinte").attr("type","submit");
                    $("#btnSeguinte").html('Criar<i class="fa fa-arrow-right"></i>');
                }
            }
        
        
        });
    }
    
    function prev() {
        $("#btnPrev").bind('click', function() {
  
            var step = $(this).attr("step");
            if (step != 1) {
                $("#paso"+step).removeClass("active");
                $("#badge"+step).removeClass("badge-info");
                $("#paso"+step).removeClass("complete");
                $("#badge"+step).removeClass("badge-success");
                $("#step"+step).removeClass("active");

                var stepAtual = parseInt(step) - 1;
                $("#btnSeguinte").attr("step", stepAtual);
                $("#badge"+stepAtual).addClass("badge-info")
                $("#paso"+stepAtual).addClass("active");
                $("#step"+stepAtual).addClass("active");
            
                if (stepAtual != 3) {
                    $("#btnSeguinte").html('Seguinte<i class="fa fa-arrow-right"></i>');
                    $("#btnSeguinte").attr("type","button");
                }
            
                $("#btnPrev").attr("step", stepAtual);
             }
        
        });
    }
    
    $(function() {
        seguinte();
        prev();
        

    })
    
</script>